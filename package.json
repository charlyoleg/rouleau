{
  "name": "rouleau",
  "version": "1.0.0",
  "description": "a sandbox for web technologies",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -fr web/dist",
    "pug_build": "pug --pretty --out web/dist/ web/pug/index.pug",
    "pug_dev": "pug --pretty -w --out web/dist/ web/pug/index.pug",
    "sass_build": "sass web/sass:web/dist/css",
    "sass_dev": "sass --watch web/sass:web/dist/css",
    "ts_build": "tsc --outDir web/dist/js web/ts/rouleau_app.ts",
    "ts_dev": "tsc --watcher --outDir web/dist/js web/ts/rouleau_app.ts",
    "start": "live-server web/dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charlyoleg/rouleau.git"
  },
  "keywords": [
    "pug",
    "sass",
    "ts",
    "JAMstack",
    "pwa",
    "rest"
  ],
  "author": "charlyoleg",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/charlyoleg/rouleau/issues"
  },
  "homepage": "https://github.com/charlyoleg/rouleau#readme",
  "devDependencies": {
    "live-server": "^1.2.1",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.20.1",
    "typescript": "^3.4.5"
  }
}

{
  "name": "rouleau",
  "version": "1.0.0",
  "description": "a sandbox for web technologies",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "jest --verbose",
    "clean_web": "rm -fr web/dist",
    "clean_yop": "rm -fr rest_js/dist",
    "build_html": "pug --pretty --out web/dist/ web/pug/index.pug",
    "dev_html": "pug --pretty --watch --out web/dist/ web/pug/index.pug",
    "build_css": "sass web/sass/rouleau_style.scss web/dist/css/rouleau_style.css",
    "dev_css": "sass --watch web/sass/rouleau_style.scss web/dist/css/rouleau_style.css",
    "build_js": "tsc --project web/ts",
    "dev_js": "tsc --watch --project web/ts",
    "build_sw": "cpx web/sw/rouleau_service_worker.js web/dist/",
    "dev_sw": "cpx web/sw/rouleau_service_worker.js web/dist/ --watch",
    "build_favicon": "cpx web/favi/rouleau_favicon.svg web/dist/",
    "build_img": "cpx web/img/**/* web/dist/img",
    "swag_yop": "swagger-jsdoc -d rest_js/src/swaggerDef.js rest_js/src/rest_yop.js -o rest_js/swagger.yaml",
    "build": "run-s build_html build_css build_js build_sw build_favicon build_img",
    "dev": "run-p -l dev_html dev_css dev_js dev_sw build_favicon build_img serve",
    "serve": "live-server web/dist",
    "start": "run-s clean_web build serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charlyoleg/rouleau.git"
  },
  "keywords": [
    "pug",
    "sass",
    "ts",
    "JAMstack",
    "pwa",
    "rest"
  ],
  "author": "charlyoleg",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/charlyoleg/rouleau/issues"
  },
  "homepage": "https://github.com/charlyoleg/rouleau#readme",
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/node": "^12.0.2",
    "cpx": "^1.5.0",
    "jest": "^24.8.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.20.1",
    "swagger-jsdoc": "^3.2.9",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "esm": "^3.2.22",
    "express": "^4.16.4"
  }
}
